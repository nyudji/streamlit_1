import streamlit as st
import pandas as pd
from sklearn.linear_model import LinearRegression

st.set_page_config(page_title='Pizza')
pizza_df = pd.read_csv("pizzas.csv")

modelo = LinearRegression()
x = pizza_df[["diametro"]]
y = pizza_df[["preco"]]

modelo.fit(x, y)

st.title("Prevendo o valor de uma pizza!")
st.divider()

diametro = st.number_input("Digite o tamanho do diâmetro da pizza: ")

if diametro:
    preco_previsto = modelo.predict([[diametro]])[0][0]
    st.write(f"O valor da pizza com diâmetro de {diametro:.2f} cm é de R${preco_previsto:.2f}.")
    st.balloons()
